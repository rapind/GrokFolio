-content_for :sidebar do
  %h2 Recommendation
  %p Your recommendations are where you specify your offerings.
  %p= "Click the \"#{(controller.action_name == 'new') ? 'Create' : 'Update'}\" button when you're done."
  
= f.error_messages

%p
  = f.label :name
  = f.text_field :name, :class => 'text validate[required,length[3,64]]'
%p
  = f.label :title
  = f.text_field :title, :class => 'text validate[required,length[3,128]]'
%p
  = f.label :company
  = f.text_field :company, :class => 'text validate[required,length[3,128]]'
%p
  = f.label :company_url
  = f.text_field :company_url, :class => 'text long validate[optional,length[12,255]]'
%p
  = f.label :body
  = f.text_area :body, :class => 'brief validate[required,length[10,2000]]'

%p.buttons
  = build_submit_button((controller.action_name == 'new') ? 'Create' : 'Update')

