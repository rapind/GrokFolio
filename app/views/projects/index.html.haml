- for project in @projects
  %div.body_part
    = link_to image_tag(project.image.url(:small), :size => '150x112', :alt => h(project.title), :style => 'float: right; margin: 40px 0 5px 20px;'), project
    %h3= link_to h(project.title), project
    = truncate(h(project.description), :length => 350)

%div.body_part{ :style => 'margin-top: 30px;' }
  %p
    %strong= will_paginate @projects